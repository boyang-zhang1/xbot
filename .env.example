
# Core directories
APP_DATA_DIR=var/data
APP_LOG_DIR=var/logs

# Twitter scraping
TWITTER_SCRAPER_HANDLES=abc
TWITTER_SCRAPER_USERNAMES=bot_account_1,bot_account_2
TWITTER_SCRAPER_PASSWORD=changeme
TWITTER_SCRAPER_SESSION_DIR=var/twitter_sessions

# Twitter publishing
TWITTER_CONSUMER_KEYS=key1,key2
TWITTER_CONSUMER_SECRETS=secret1,secret2
TWITTER_ACCESS_TOKENS=token1,token2
TWITTER_ACCESS_TOKEN_SECRETS=token_secret1,token_secret2
TWITTER_PUBLISH_PROFILES=default
TWITTER_FINAL_MESSAGES="Thanks @{kol}~"

# OpenAI
OPENAI_API_KEY=sk-your-key
OPENAI_TRANSLATION_MODEL=gpt-5-mini
OPENAI_SUMMARY_MODEL=gpt-5-nano
OPENAI_REQUEST_TIMEOUT=60

# Telegram bot
TELEGRAM_API_ID=123456
TELEGRAM_API_HASH=your_api_hash
TELEGRAM_BOT_TOKEN=123456:ABCDEF
TELEGRAM_OPERATOR_CHAT_ID=-100123456

# Scheduling
SCRAPER_INTERVAL_SECONDS=7200
TRANSLATION_BATCH_SIZE=3

# Feature toggles
ENABLE_TRANSLATION_TITLES=true
