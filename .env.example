# Application paths
APP_DATA_DIR=var/data
APP_LOG_DIR=var/logs

# Scraper configuration
TWITTER_SCRAPER_HANDLES=account_one,account_two
TWITTER_SCRAPER_USERNAMES=your_scraper_login
TWITTER_SCRAPER_PASSWORD=your_password
TWITTER_SCRAPER_SESSION_DIR=var/twitter_sessions
TWITTER_SCRAPER_INTERVAL_SECONDS=7200

# Twitter publisher credentials (aligned by index)
TWITTER_CONSUMER_KEYS=consumer_key_default
TWITTER_CONSUMER_SECRETS=consumer_secret_default
TWITTER_ACCESS_TOKENS=access_token_default
TWITTER_ACCESS_TOKEN_SECRETS=access_token_secret_default
TWITTER_PUBLISH_PROFILES=default
TWITTER_FINAL_MESSAGES=Thank you for reading!

# OpenAI translation settings
OPENAI_API_KEY=sk-...
OPENAI_TRANSLATION_MODEL=gpt-4o-mini
OPENAI_SUMMARY_MODEL=gpt-4o
OPENAI_REQUEST_TIMEOUT=60

# Telegram bot credentials
TELEGRAM_API_ID=123456
TELEGRAM_API_HASH=hashstring
TELEGRAM_BOT_TOKEN=bot:token
TELEGRAM_OPERATOR_CHAT_ID=987654321

# Feature flags
ENABLE_TRANSLATION_TITLES=true
