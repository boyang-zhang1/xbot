# Paths
APP_DATA_DIR=var/data
APP_LOG_DIR=var/logs

# Twitter scraping accounts (comma-separated handles)
TWITTER_SCRAPER_HANDLES=account_one,account_two
TWITTER_SCRAPER_USERNAMES=scraper_user_1,scraper_user_2
TWITTER_SCRAPER_PASSWORD=replace-with-password
TWITTER_SCRAPER_SESSION_DIR=var/twitter_sessions
TWITTER_SCRAPER_INTERVAL_SECONDS=7200

# Twitter publishing credentials (parallel arrays)
TWITTER_CONSUMER_KEYS=consumer_key_1,consumer_key_2
TWITTER_CONSUMER_SECRETS=consumer_secret_1,consumer_secret_2
TWITTER_ACCESS_TOKENS=access_token_1,access_token_2
TWITTER_ACCESS_TOKEN_SECRETS=access_token_secret_1,access_token_secret_2
TWITTER_PUBLISH_PROFILES=default,backup
TWITTER_FINAL_MESSAGES=thank-you-message-1,thank-you-message-2

# OpenAI configuration
OPENAI_API_KEY=sk-your-key
OPENAI_TRANSLATION_MODEL=gpt-4o-mini
OPENAI_SUMMARY_MODEL=gpt-4o
OPENAI_REQUEST_TIMEOUT=60

# Telegram bot credentials
TELEGRAM_API_ID=0
TELEGRAM_API_HASH=replace-with-hash
TELEGRAM_BOT_TOKEN=bot-token
TELEGRAM_OPERATOR_CHAT_ID=0

# Feature toggles
ENABLE_TRANSLATION_TITLES=true
